{
  "name": "Doorbell Song Server",
  "version": "2",
  "slug": "doorbell_song_server",
  "description": "Doorbell Song Web Server",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "before",
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "options": {
    "log_level": "info",
    "file_root": "",
    "ip_address": "",
    "seconds_between_quotes": 5
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)",
    "file_root": "str",
    "ip_address": "str",
    "seconds_between_quotes": "int(1,120)"    
  },
  "host_network": true,
  "map": [
    "config"
  ],
  "ports": {
    "8888/tcp": 8888
  }
}
